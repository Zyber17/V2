@import helpers

#content
	max-width 800px
	margin 25px auto 0
	padding 0 20px 56px
	h2
		headerText(true)
		font-size 2.2em
		padding 20px 0
		color $darkOrange

	form
		height 60px
		input
			font-family $fontSans
			float left
			height @height
			borderBox()
			outline 0
			outline-style none
			border 1px solid $lightGrey
			font-size 32px
			margin 0
			color $veryDarkGrey
			&#searchpagebox
				width 375px
				padding 20px
				&:focus, &:focus + #searchpagesubmit
					border-color $darkOrange
			&#searchpagesubmit
				border-left none
				width 100px
				text-transform uppercase
				background $darkOrange
				color #fff
				-webkit-appearance none
				-moz-appearance none