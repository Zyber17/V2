@import helpers

strong
	font-weight 700
em
	font-style italic

body
	background #fff
	font-family $fontSans
	color $black

a
	&:link, &:visited
		color invert($darkOrange)
		text-decoration none
	&:hover
		border-bottom 1px dashed invert($darkOrange)
	&:active
		color invert($lightOrange)
		border-bottom 1px dashed invert($lightOrange)

#wrapper
	position relative
	max-width $bodyWidth
	margin 0 auto

#header
	background: $lightOrange
	height 181px
	padding 10px 0
	h1 a
		display block
		hideText()
		background-image url('/images/logo.png')
		background-repeat no-repeat
		background-position center center
		height @height - 22
		border-bottom none
		text-decoration none

	ul
		margin-top -15px
		li
			display block
			margin 0 auto
			width 155px
			a
				headerText(false)
				color #fff
				font-size 22px
				border-bottom none
				text-decoration none
			

.bar
	background $darkOrange
	color #fff
	text-transform uppercase
	font-weight bold
	text-align center
	font-size 22px
	padding 15px 0

#footer 
	background $lightOrange
	padding 20px 0
	text-align center
