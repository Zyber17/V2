@import helpers

strong
	font-weight 700
em
	font-style italic

body
	background #fff
	font-family $fontSans
	color $black

a
	&:link, &:visited
		color invert($darkOrange)
		text-decoration none
	&:hover
		border-bottom 1px dashed invert($darkOrange)
	&:active
		color invert($lightOrange)
		border-bottom 1px dashed invert($lightOrange)

#wrapper
	position relative
	max-width $bodyWidth
	margin 0 auto

#header
	background $lightOrange
	height 168px
	padding 10px 0
	position relative
	h1 a
		display block
		hideText()
		background-image url('/images/logo.png')
		background-size 465px 139px
		background-repeat no-repeat
		background-position center center
		height @height - 5
		border-bottom none
		text-decoration none
		@media screen and (-webkit-min-device-pixel-ratio 1.25), (min-resolution 120dpi)
			background-image url('/images/logo_2x.png')
	aside
		position absolute
		top 0
		right 0
		z-index 10
		@media screen and (max-width $readOnlineWidth)
			position relative
			margin-top -32px
		a
			&:link, &:visited, &:hover, &:active
				display block
				position relative
				width 180px
				height @width
				border-bottom none
				text-align right
				border-bottom none
				color #fff
				font-size 20px
				headerText false
				@media screen and (max-width $readOnlineWidth)
					width auto
					height 28px
					text-align center
				div.triangle
					border-width 0 @width @width 0
					border-style solid
					border-color transparent $darkOrange transparent transparent
					line-height 0px
					position absolute
					top 0
					right 0
					width 0
					height 0
					z-index -1
					@media screen and (max-width $readOnlineWidth)
						display none
				div.text
					position absolute
					right 6px
					top 6px
					z-index 100
					display block
					width 105px
					@media screen and (max-width $readOnlineWidth)
						position relative
						right 0
						top 0
						width 370px
						background $darkOrange
						padding 5px 0 3px
						line-height 1.1
						margin 0 auto
			&:hover
				div.triangle
					border-right-color darken($darkOrange, 20%)
				@media screen and (max-width $readOnlineWidth)
					div.text
						background darken($darkOrange, 20%)						

nav
	background $darkOrange
	color #fff
	text-transform uppercase
	font-weight bold
	height 43px
	line-height 1
	overflow hidden
	ul
		margin 0 30px
		display block
		width 100%
		height @height
		overflow hidden
		borderBox()
		li
			float left
			font-size 1.6em
			// margin-right 36px
			height 43px
			display block
			overflow hidden
			borderBox()
			a
				display block
				borderBox()
				padding 10px 19px
				height 43px
				&:link, &:visited, &:hover, &:active
					color #fff
					border none
				&:hover
					background darken(@background, 20%)
					// color $darkOrange


#footer 
	background $lightOrange
	padding 20px 0
	text-align center
