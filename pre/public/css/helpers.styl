$fontSans = Avenir,'Open Sans','Helvetica Neue',Helvetica,Arial,Verdana,sans-serif

$black = #232323
$veryDarkGrey = #333
$darkGrey = #838383
$lightGrey = #7f7f7f
$lightOrange = #1f5b8a
$darkOrange = #11334d
$bodyWidth = 1024px
$readOnlineWidth = 690px
$lgText = 28px

bgBlur(radius)
	filter: blur(unit(radius, px))
	-webkit-filter: blur(unit(radius, px))
	-moz-filter: blur(unit(radius, px))
	-o-filter: blur(unit(radius, px))
	-ms-filter: blur(unit(radius, px))

borderRadius(radius)
	-webkit-border-radius radius
	-moz-border-radius radius
	-o-border-radius radius
	border-radius radius

retina(query)
	@media (min--moz-device-pixel-ratio: 1.25), (-o-min-device-pixel-ratio: 5/4), (-webkit-min-device-pixel-ratio: 1.25), (min-device-pixel-ratio: 1.25), (min-resolution: 1.25dppx)
		background-image url(query)

placeholder(c)
	input::-webkit-input-placeholder
		color c
	input:-moz-placeholder
		color c
	input::-moz-placeholder
		color c
		opacity 1
	input:-ms-input-placeholder
		color c

hideText()
	text-indent: -9999px

headerText(isItalic)
	text-transform uppercase
	font-weight bold
	if isItalic
		font-style italic

ofEllipsis()
	white-space nowrap
	overflow hidden
	text-overflow ellipsis

borderBox()
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	-ms-box-sizing border-box
	-o-box-sizing border-box
	box-sizing border-box

flameGlyph(h)
	background-size unit((11/16)*h, px) unit(h, px)
	background-repeat no-repeat
	if h > 64
		background-image url('/images/heat@2x.png')
	else
		background-image url('/images/heat.png')
	height unit(h, px)
	width unit((11/16)*h, px)
	display block
	@media screen and (-webkit-min-device-pixel-ratio:1.5)
		if h <= 64 && h > 32
			background-image url('/images/heat@2x.png')

