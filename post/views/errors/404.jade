	h2.message= (_err ? _err : 'Page not found')
	div#searchsuggestion
		h3= 'Maybe try a' + (_err == "No articles matched that search" ? 'nother' : '') + ' search?'
		form#form(method="get", action='/search', enctype="multipart/form-data")
			input#searchpagebox(type="text", placeholder="Searchâ€¦", name="q")

			input#searchpagesubmit(type="submit", value="Go")