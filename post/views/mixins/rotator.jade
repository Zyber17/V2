mixin rotator(items)
	input(type="hidden",class="rotatorCount",value=items.length)
	.outside
		.img
			ul
				for item, i in items
					li(id="ritem#{i}", data-index=i, class=(i == 0 ? 'selected' : ''))
						div
							a(href=item.slug)
								div.title
									h3= item.title
									div.background
								img(src=item.rotator)
		.recentPre
			h2 Featured Stories
			ul
				for item, i in items
					li(id="sitem#{i}", data-index=i, class=(i == 0 ? 'selected' : ''))
						a(href=item.slug)
							div.content
								h3= item.title
								article
									p= item.body

